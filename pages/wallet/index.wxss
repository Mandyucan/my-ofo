/* pages/wallet/index.wxss */

.container {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}

.overage {
  padding: 40rpx;
  background-color: #fff;
  text-align: center;
}

.overage .overage-header {
  font-size: 28rpx;
  padding: 20rpx;
}

.overage .overage-content {
  display: block;
  font-size: 120rpx;
  font-weight: 700;
  padding: 30rpx 0;
  margin: 30rpx 0;
}

.overage .overage-desc {
  border: 2px solid #666;
  border-radius: 50rpx;
  padding: 10rpx 25rpx 10rpx 25rpx;
  font-size: 28rpx;
}

.btn-charge {
  width: 90%;
  margin-top: 40rpx;
  background-color: #359eff;
  color: #fff;
}

.tapbar {
  padding: 35rpx;
  background-color: #fff;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.my-deposit {
  margin-top: 2rpx;
}

.text-color {
  color: #359eff;
  margin-right: 12rpx;
}
